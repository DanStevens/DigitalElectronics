<Window x:Class="DigitalElectronics.Demos.Components.SevenSegmentDigitDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalElectronics.Demos.Components"
        xmlns:controls="clr-namespace:DigitalElectronics.UI.Controls;assembly=DigitalElectronics.UI"
        xmlns:converters="clr-namespace:DigitalElectronics.UI.Converters;assembly=DigitalElectronics.UI"
        d:DataContext="{d:DesignInstance Type=local:SevenSegmentDigitDemoViewModel}"
        mc:Ignorable="d"
        Title="Seven Segment Digit Demo" Height="200" Width="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <controls:SevenSegmentDigit Background="Black" Height="70" Margin="5" Padding="5"
                                    SegmentsLitColor="Lime" SegmentsUnlitColor="#FF404040"
                                    Lines="{Binding LinesAsBools}" HorizontalAlignment="Center" />
        <controls:DipSwitch Margin="5" BitOrder="LsbFirst" Lines="{Binding Lines}" />
    </StackPanel>
</Window>
