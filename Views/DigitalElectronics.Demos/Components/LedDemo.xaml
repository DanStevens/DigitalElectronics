<Window x:Class="DigitalElectronics.Demos.Components.LedDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalElectronics.Demos.Components"
        xmlns:controls="clr-namespace:DigitalElectronics.UI.Controls;assembly=DigitalElectronics.UI"
        xmlns:converters="clr-namespace:DigitalElectronics.UI.Converters;assembly=DigitalElectronics.UI"
        mc:Ignorable="d"
        Title="LED Demo" Height="175" Width="250">
    <StackPanel Width="150" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <CheckBox x:Name="InputCheckBox" Margin="5" Content="Input" HorizontalAlignment="Center" />
        <controls:LED Margin="5" Width="20" Height="20" IsLit="{Binding IsChecked, ElementName=InputCheckBox}"
                      DecayDuration="{Binding Value, ElementName=DecayTimeSlider,
                      Converter={converters:MillisecondsToTimeSpanConverter}}" />
        <Label Content="Decay time:" />
        <Slider x:Name="DecayTimeSlider" Minimum="0" Maximum="2000" Value="1000" LargeChange="10" SmallChange="1" />
        <TextBlock Text="{Binding Value, ElementName=DecayTimeSlider, StringFormat=\{0:F0\} ms}" HorizontalAlignment="Right" />
    </StackPanel>
</Window>
